{
  "name": "react-typescript-jest-boilerplate",
  "version": "1.0.2",
  "description": "Boilerplate for React app with Typescript and Jest lib",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --open --hot --config ./webpack.config.js",
    "build": "webpack --mode production --config ./webpack.config.js",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint src/**/*.{js,ts,tsx} --quiet",
    "lint:style": "stylelint src/**/*.scss",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkoziol/react-typescript-jest-boilerplate.git"
  },
  "keywords": [
    "react",
    "typescript",
    "javascript",
    "jest",
    "boilerplate",
    "rkoziol"
  ],
  "author": "rkoziol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rkoziol/react-typescript-jest-boilerplate/issues"
  },
  "homepage": "https://github.com/rkoziol/react-typescript-jest-boilerplate#readme",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^13.2.0",
    "@types/jest": "27.0.2",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.0",
    "@types/react-router-dom": "5.3.3",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "css-loader": "6.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.3.2",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "mini-css-extract-plugin": "2.3.0",
    "prettier": "2.6.2",
    "sass": "1.50.0",
    "sass-loader": "^12.6.0",
    "source-map-loader": "3.0.0",
    "style-loader": "3.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-sass-guidelines": "8.0.0",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "typescript": "4.6.3",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.8.1"
  },
  "dependencies": {
    "jest": "27.5.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-router-dom": "6.3.0",
    "react-test-renderer": "18.0.0"
  }
}
